<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:cardCornerRadius="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1F1F1F"
                android:gravity="center"
                android:text="Do you know"
                android:paddingTop="10dp"
                android:textColor="@color/purple_200"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1F1F1F"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Our weight varies due to the effect of gravity on earth? It's just weight that changes, but our body mass is always constant. In this app, we can find out the weight of any object on different planets by multiplying its mass by the surface gravity. To calculate, just enter the weight, select any planet from the drop-down menu, and click the Calculate button to get the result. To clear, click Reset."
                    android:textColor="@color/white"
                    tools:ignore="HardcodedText" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_below="@id/message"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:backgroundTint="#1F1F1F" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/view"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/okay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="#cb6ce6"
                        android:gravity="center"
                        android:text="okay"
                        android:textAllCaps="true"
                        app:cornerRadius="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>